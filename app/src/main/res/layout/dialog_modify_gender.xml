<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:text="选择性别"
            android:gravity="center"
            android:textSize="20sp"/>
        <RadioGroup
            android:id="@+id/dialog_modify_gender_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp">
            <RadioButton
                android:id="@+id/dialog_modify_gender_male"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="男"
                android:layout_weight="1"
                android:layout_gravity="center" />
            <RadioButton
                android:id="@+id/dialog_modify_gender_female"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="女"
                android:layout_weight="1"
                />
        </RadioGroup>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/dialog_modify_gender_cancel_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="取消"
                android:layout_weight="1"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_btn_grey"/>
            <Button
                android:id="@+id/dialog_modify_gender_confirm_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="确定"
                android:layout_weight="1"
                android:background="@drawable/shape_btn"
                android:textColor="@color/white"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>