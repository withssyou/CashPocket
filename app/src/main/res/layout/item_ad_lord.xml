<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_id_lord_date_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2018-11-12 12:12:12"
            android:drawableLeft="@mipmap/time"
            android:padding="10dp"
            android:drawablePadding="5dp"/>
        <TextView
            android:id="@+id/item_id_lord_rest_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="剩余90天"
            android:textStyle="bold"
            android:padding="10dp"/>
    </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/item_ad_lord_icon_iv"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/ic_launcher"
                android:padding="10dp"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/item_id_lord_money_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/item_ad_lord_icon_iv"
                android:text="￥98"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/item_id_lord_times_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/item_ad_lord_icon_iv"
                android:layout_below="@+id/item_id_lord_money_tv"
                android:text="1000次广告曝光" />
            <TextView
                android:id="@+id/item_id_lord_jifen_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/item_ad_lord_icon_iv"
                android:layout_below="@+id/item_id_lord_times_tv"
                android:text="100积分" />
            <Button
                android:id="@+id/item_id_lord_doing_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="未 发"
                android:background="@drawable/shape_btn"
                android:textColor="@color/white"
                android:layout_marginRight="10dp"/>
            <Button
                android:id="@+id/item_id_lord_done_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="已 发"
                android:background="@drawable/shape_btn_grey"
                android:layout_marginRight="10dp"
                android:visibility="gone"/>
        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>