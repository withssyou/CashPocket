<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="30dp">
    <TextView
        android:id="@+id/dialog_pay_set_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="设置支付密码"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="24sp"/>
    <EditText
        android:id="@+id/dialog_pay_set_pwd_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_pay_set_tv"
        android:background="@drawable/shape_et"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:padding="15dp"/>
    <EditText
        android:id="@+id/dialog_pay_set_confirm_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_pay_set_pwd_et"
        android:background="@drawable/shape_et"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:padding="15dp"/>
    <EditText
        android:id="@+id/dialog_pay_set_code_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_pay_set_confirm_et"
        android:background="@drawable/shape_et"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="15dp"
        android:layout_marginTop="10dp"/>
    <Button
        android:id="@+id/dialog_pay_set_code_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取验证码"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/dialog_pay_set_confirm_et"
        android:layout_marginRight="20dp"
        android:layout_marginTop="12.5dp"
        android:background="@drawable/shape_btn_code" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_pay_set_code_et"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp">
        <Button
            android:id="@+id/dialog_pay_set_cancle_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="取消"
            android:background="@drawable/shape_btn_grey"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <Button
            android:id="@+id/dialog_pay_set_confirm_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="确认"
            android:background="@drawable/shape_btn"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"/>
    </LinearLayout>
</RelativeLayout>