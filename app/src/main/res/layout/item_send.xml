<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp">
    <TextView
        android:id="@+id/item_send_day_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="03"
        android:textSize="30sp"/>
    <TextView
        android:id="@+id/item_send_month_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/item_send_day_tv"
        android:layout_alignBottom="@+id/item_send_day_tv" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#EBEBEB"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/item_send_month_tv">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
            <TextView
                android:id="@+id/item_details_time_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="16:18:12"
                android:drawableLeft="@mipmap/time"
                android:drawablePadding="5dp" />
            <TextView
                android:id="@+id/item_details_sending_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 待支付 "
                android:padding="5dp" />
            <TextView
                android:id="@+id/item_details_send_out_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 已抢光 "
                android:padding="5dp"
                android:textColor="#B2B2B2"
                android:background="@drawable/shape_sendout"
                android:visibility="gone"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGray" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/item_details_ad_icon_iv"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/item_details_ad_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="广告标题"
                android:layout_toRightOf="@+id/item_details_ad_icon_iv"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/item_details_ad_send_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="曝光量：1000"
                android:layout_toRightOf="@+id/item_details_ad_icon_iv"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp" />
            <TextView
                android:id="@+id/item_details_ad_receive_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="积分：100"
                android:layout_toRightOf="@+id/item_details_ad_icon_iv"
                android:layout_alignBottom="@+id/item_details_ad_icon_iv"
                android:layout_marginLeft="20dp" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>