<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="30dp">
    <TextView
        android:id="@+id/dialog_pay_dian_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="点点零钱支付"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="24sp"/>
    <TextView
        android:id="@+id/dialog_pay_money_show_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:text="199.8元"
        android:textColor="@color/colorRed"
        android:layout_below="@+id/dialog_pay_dian_tv"
        android:layout_centerHorizontal="true"/>
    <EditText
        android:id="@+id/dialog_pay_money_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_pay_money_show_tv"
        android:background="@drawable/shape_et"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_pay_money_et"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="取消"
            android:background="@drawable/shape_btn_grey"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="确认"
            android:background="@drawable/shape_btn"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"/>
    </LinearLayout>
</RelativeLayout>