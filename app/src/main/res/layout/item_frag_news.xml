<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15dp"
    app:cardCornerRadius="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView
            android:id="@+id/item_frag_news_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="干货，如何获取更多红包？"
            android:textStyle="bold"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/item_frag_news_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018-11-22"
            android:layout_marginTop="5dp"
            android:textSize="18sp"/>
        <ImageView
            android:id="@+id/item_frag_news_icon_iv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitXY"/>
        <LinearLayout
            android:id="@+id/item_frag_news_go_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/item_frag_news_show_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="阅读全文"
                android:textSize="20sp"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:src="@mipmap/go"
                />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>