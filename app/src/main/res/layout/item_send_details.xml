<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#EBEBEB"
    android:layout_marginTop="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <TextView
            android:id="@+id/item_details_time_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="16:18:12"
            android:drawableLeft="@mipmap/time"
            android:drawablePadding="5dp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/item_details_sending_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 派发中 "
            android:padding="5dp"
            android:textColor="@color/white"
            android:background="@drawable/shape_sending"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/item_details_send_out_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 已抢光 "
            android:padding="5dp"
            android:textColor="#B2B2B2"
            android:background="@drawable/shape_sendout"
            android:visibility="visible"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGray" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/item_details_ad_icon_iv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="20dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/item_details_ad_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="广告标题"
            android:layout_toRightOf="@+id/item_details_ad_icon_iv"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/item_details_ad_send_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发放数量：300"
            android:layout_toRightOf="@+id/item_details_ad_icon_iv"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp" />
        <TextView
            android:id="@+id/item_details_ad_receive_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="接收数量：300"
            android:layout_toRightOf="@+id/item_details_ad_icon_iv"
            android:layout_alignBottom="@+id/item_details_ad_icon_iv"
            android:layout_marginLeft="20dp" />
    </RelativeLayout>
</LinearLayout>