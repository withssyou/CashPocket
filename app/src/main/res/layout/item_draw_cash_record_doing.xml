    <TextView
        android:id="@+id/item_draw_cash_date_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="12-10"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="20sp"
        android:background="@color/colorGray"
        android:layout_margin="10dp"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_draw_cash_date_tv"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/item_draw_cash_way_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝提现"
                android:padding="10dp"/>
            <TextView
                android:id="@+id/item_draw_cash_money_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="199元"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                />
            <TextView
                android:id="@+id/item_draw_cash_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_draw_cash_way_tv"
                android:text="2018-12-12 12:12:12"
                android:padding="10dp"/>
            <TextView
                android:id="@+id/item_draw_cash_state_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/item_draw_cash_way_tv"
                android:layout_centerVertical="true"
                android:text="未处理"
                android:padding="10dp"
                android:textColor="@color/colorRed"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
