    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="35%"
        android:background="@color/colorRedTitle">
        <RelativeLayout
            android:id="@+id/title"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/fmg_my_title_civ"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/icon_default"
                />
            <ImageView
                android:id="@+id/fragment_my_modify_info_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:src="@mipmap/my_edit"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/fmg_my_id_icon_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitXY"
            android:padding="10dp"
            android:src="@mipmap/my_help" />
        <TextView
            android:id="@+id/fmg_my_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热爱工作"
            android:layout_marginTop="3dp"
            android:textColor="@color/white"
            android:layout_below="@+id/title"
            android:layout_centerHorizontal="true"
            android:drawableRight="@mipmap/vip"
            android:drawablePadding="3dp"/>
        <LinearLayout
            android:id="@+id/fmg_my_level_up_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/fmg_my_name_tv"
